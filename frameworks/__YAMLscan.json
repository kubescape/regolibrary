{
    "name": "YAML-scanning",
    "description": "Controls relevant to yamls",
    "attributes": {
        "armoBuiltin": true
    },
    "scanningScope": {
        "matches": [
            "file"
        ]
    },
    "controlsNames": [
        "Forbidden Container Registries",
        "Exec into container",
        "Resources memory limit and request",
        "Data Destruction",
        "Resource policies",
        "Applications credentials in configuration files",
        "Non-root containers",
        "Access Kubernetes dashboard",
        "List Kubernetes secrets",
        "Allow privilege escalation",
        "Immutable container filesystem",
        "Configured readiness probe",
        "Mount service principal",
        "Exposed sensitive interfaces",
        "Kubernetes CronJob",
        "Ingress and Egress blocked",
        "Delete Kubernetes events",
        "Access tiller endpoint",
        "Automatic mapping of service account",
        "Cluster-admin binding",
        "Validate admission controller (validating)",
        "CoreDNS poisoning",
        "Host PID/IPC privileges",
        "Validate admission controller (mutating)",
        "HostNetwork access",
        "SSH server running inside container",
        "Container hostPort",
        "Writable hostPath mount",
        "Insecure capabilities",
        "HostPath mount",
        "Resources CPU limit and request",
        "Instance Metadata API",
        "Access container service account",
        "Cluster internal networking",
        "Linux hardening",
        "Configured liveness probe",
        "Privileged container",
        "CVE-2021-25741 - Using symlink for arbitrary host file system access.",
        "Sudo in container entrypoint",
        "Portforwarding privileges",
        "No impersonation",
        "Naked pods",
        "Container runtime socket mounted",
        "Image pull policy on latest tag",
        "Label usage for resources",
        "K8s common labels usage",
        "Images from allowed registry",
        "CVE-2022-24348-argocddirtraversal",
        "CVE-2022-0492-cgroups-container-escape"
    ]
}