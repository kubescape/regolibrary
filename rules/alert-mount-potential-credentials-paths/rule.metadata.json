{
  "name": "alert-mount-potential-credentials-paths",
  "attributes": {
    "m$K8sThreatMatrix": "Privilege Escalation::hostPath mount",
    "armoBuiltin": true
  },
  "ruleLanguage": "Rego",
  "match": [
    {
      "apiGroups": [
        ""
      ],
      "apiVersions": [
        "v1"
      ],
      "resources": [
          "Pod"
      ]
    },
    {
      "apiGroups": [
        "apps"
      ],
      "apiVersions": [
        "v1"
      ],
      "resources": [
          "Deployment",
          "ReplicaSet",
          "DaemonSet",
          "StatefulSet"
      ]
    },
    {
      "apiGroups": [
        "batch"
      ],
      "apiVersions": [
        "*"
      ],
      "resources": [
          "Job",
          "CronJob"
      ]
    }
  ],
  "dynamicMatch": [
    {
      "apiGroups": [
        "container.googleapis.com",
        "eks.amazonaws.com",
        "management.azure.com"
      ],
      "apiVersions": [
        "v1"
      ],
      "resources": [
        "ClusterDescribe"
      ]
    }
  ],
  "relevantCloudProviders": ["EKS", "GKE", "AKS"],
  "ruleDependencies": [],
  "description": "determines if any workload contains a hostPath volume",
  "remediation": "Try to refrain from using hostPath mounts",
  "ruleQuery": ""
}